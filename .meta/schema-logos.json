{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "id": {
        "type": "string",
        "pattern": "^[a-z0-9]+[a-z0-9-]*$"
      },
      "association": {
        "type": "string",
        "pattern": "^[a-z0-9]+[a-z0-9-]*$"
      },
      "name": {
        "type": "string"
      },
      "url": {
        "type": "string",
        "format": "uri"
      },
      "aliases": {
        "type": "array",
        "items": {
          "type": "string"
        }
      }
    },
    "required": [ "id", "name", "url" ],
    "additionalProperties": false
  }
}
